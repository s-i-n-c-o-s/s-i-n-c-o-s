---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href={import.meta.env.BASE_URL}>{SITE_TITLE}</a></h2>
		
		<div class="welcome-message">
			üë©‚Äçüíª <span class="gradient-text"> Welcome to My World! It is under construction...</span>
		</div>
		
		<div class="internal-links">
			<HeaderLink href={import.meta.env.BASE_URL}>Home</HeaderLink>
			<HeaderLink href={`${import.meta.env.BASE_URL}/blog`}>Blog</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		position: relative;
	}
	
	.welcome-message {
		position: absolute;
		left: 50%;
		transform: translateX(-50%);
		font-size: 1.2em;
		font-weight: 600;
		opacity: 0.9;
		perspective: 1000px;
	}
	
	.gradient-text {
		background: linear-gradient(45deg, 
			#9C27B0, 
			#673AB7, 
			#3F51B5, 
			#2196F3,
			#00BCD4,
			#009688,
			#4CAF50
		);
		background-size: 300% 300%;
		background-clip: text;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		animation: gradientFlow 3s ease-in-out infinite, textFloat 2.5s ease-in-out infinite;
		letter-spacing: 0.5px;
		position: relative;
	}
	
	.gradient-text::before {
		display: none;
	}
	
	@keyframes gradientFlow {
		0%, 100% {
			background-position: 0% 50%;
		}
		25% {
			background-position: 100% 0%;
		}
		50% {
			background-position: 100% 100%;
		}
		75% {
			background-position: 0% 100%;
		}
	}
	
	@keyframes textFloat {
		0%, 100% {
			transform: translateY(0px);
		}
		50% {
			transform: translateY(-1px);
		}
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
		.welcome-message {
			display: none;
		}
		nav {
			justify-content: space-between;
		}
	}
</style>
